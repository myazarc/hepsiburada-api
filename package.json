{
  "name": "hepsiburada-api",
  "version": "1.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "keywords": [
    "ecosystem:api",
    "hepsiburada api",
    "hepsiburada",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/myazarc/hepsiburada-api.git"
  },
  "bugs": {
    "url": "https://github.com/myazarc/hepsiburada-api/issues"
  },
  "homepage": "https://github.com/myazarc/hepsiburada-api#readme",
  "author": {
    "name": "Mustafa Yazar",
    "email": "myazarc@gmail.com"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/sax": "^1.2.4",
    "concurrently": "^6.4.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "axios": "^0.26.1"
  },
  "scripts": {
    "dev": "yarn compile && concurrently \"yarn compile:watch\"  \"yarn start\"",
    "start": "nodemon .",
    "compile": "rimraf dist && tsc",
    "compile:watch": "tsc -w",
    "build": "yarn compile",
    "prepublish": "yarn compile",
    "test": "jest",
    "coverage": "jest --coverage",
    "test:badges": "yarn coverage && jest-coverage-badges && cp ./coverage/badge-statements.svg ./.badges/coverage.svg"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "src/test.ts"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "json-summary",
      "html"
    ]
  }
}
